{
  "name": "spiral/stempler-bridge",
  "type": "library",
  "description": "Spiral Framework: Stempler Adapter",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Titov / Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "spiral/stempler": "^2.0",
    "spiral/framework": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "^1.1",
    "spiral/dumper": "^1.0",
    "spiral/code-style": "^1.0"
  },
  "autoload": {
    "files": [
      "functions.php"
    ],
    "psr-4": {
      "Spiral\\Stempler\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Stempler\\Tests\\": "tests/Stempler/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}

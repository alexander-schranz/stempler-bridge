{
    "name": "spiral/stempler-bridge",
    "type": "library",
    "description": "Spiral Framework: Stempler Adapter",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/stempler-bridge"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "spiral/stempler": "^2.7",
        "spiral/boot": "^2.7",
        "spiral/files": "^2.7",
        "spiral/config": "^2.7",
        "spiral/translator": "^2.7",
        "spiral/router": "^2.7",
        "spiral/views": "^2.7",
        "spiral/core": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.0",
        "mockery/mockery": "^1.3",
        "spiral/dumper": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Stempler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Stempler\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.7.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

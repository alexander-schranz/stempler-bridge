{
    "name": "spiral/stempler-bridge",
    "type": "library",
    "description": "Spiral Framework: Stempler Adapter",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/stempler-bridge"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "spiral/stempler": "^3.0",
        "spiral/boot": "^3.0",
        "spiral/files": "^3.0",
        "spiral/config": "^3.0",
        "spiral/translator": "^3.0",
        "spiral/router": "^3.0",
        "spiral/views": "^3.0",
        "spiral/core": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.20",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Stempler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Stempler\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.14.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
